<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <ol>
      <% @project.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ol>
  <% end %>
  <div>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title%>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  </div>
<% end %>
