
<h1>Users Interface</h1>

<ul>
  <% @users.each do |user| %>
    <li class="container">
      <% if user.image.attached? %>
        <%= image_tag user.image.variant(resize_to_limit: [200, 200]) %>
      <% end %>
      <div class="users-info">
         <div class="text-secondary h4">Title: <span class="text-dark"><%= user.title %></span></div>
         <div class="text-secondary h4">Full name: <span class="text-dark"><%= user.name %></span></div>
      </div>
      <div>
        <div class="button"><%= link_to 'View user', user_path(user)%></div>
        <div class="button"><%= link_to 'Edit user', edit_user_path(user) %></div>
        <div class="button"><%= link_to 'Delete user', user_path(user), method: 'DELETE', data: { confirm: 'Really?' } %></div>
      </div>
    </li>
  <% end %>
</ul>

