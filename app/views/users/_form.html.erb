<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ol>
      <% @user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ol>
  <% end %>
  <ul class="form">
    <li class="form-input">
      <%= f.label :title %>
      <%= f.text_field :title%>
    </li>

    <li class="form-input">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>

    <li class="form-input">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </li>

    <li class="form-submit">
      <%= f.submit %>
    </li>
  </ul>
<% end %>

