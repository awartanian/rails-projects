<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <ul class="form">
    <li class="form-input">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </li>

    <li class="form-input">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </li>

    <li class="form-input">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %>
    </li>

    <li class="form-submit">
      <%= submit_tag "Log in" %>
    </li>
  </ul>
<% end %>
